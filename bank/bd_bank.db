
from sqlalchemy import create_engine
from sqlalchemy import Column
from sqlalchemy import Integer
from sqlalchemy import String
from sqlalchemy import Float    
from sqlalchemy import ForeignKey
from sqlalchemy.ext.declarative import declarative_base
from sqlalchemy.orm import sessionmaker
from sqlalchemy.orm import relationship

database = 'bd_bank.db'
nova_engine = create_engine('sqlite:///'+ database)

Base = declarative_base()

class Usuario(Base):
    __tablename__ = 'usuarios'
    id = Column(Integer, primary_key=True)
    nome = Column(String, nullable=False)
    cpf = Column(String, nullable=False, unique=True)
    renda_mensal = Column(Float, nullable=False)
    contas = relationship("Conta", back_populates="usuario")

class Conta(Base):
    __tablename__ = 'contas'
    id = Column(Integer, primary_key=True)
    numero = Column(Integer, nullable=False, unique=True)
    tipo = Column(String, nullable=False)
    saldo = Column(Float, nullable=False)
    senha_hash = Column(String, nullable=False)
    usuario_id = Column(Integer, ForeignKey('usuarios.id'))
    usuario = relationship("Usuario",back_populates="contas")

Base.metadata.create_all(nova_engine)
